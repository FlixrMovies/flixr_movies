<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#111111"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="vertical">
		<com.airbnb.lottie.LottieAnimationView
			android:id="@+id/lottie1"
			android:layout_width="150dp"
			android:layout_height="150dp"
			android:padding="8dp"
			android:scaleType="fitCenter"
			android:layout_centerInParent="true"
			app:lottie_fileName="ellie_surprise.json"
			app:lottie_loop="true"
			app:lottie_autoPlay="true"/>
		<TextView
			android:id="@+id/textview1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:padding="8dp"
			android:text="Unable to connect to the internet, try again."
			android:textSize="12sp"
			android:textColor="#FFFFFF"/>
		<com.google.android.material.button.MaterialButton
			android:id="@+id/materialbutton1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:paddingLeft="10dp"
			android:paddingTop="8dp"
			android:paddingRight="8dp"
			android:paddingBottom="8dp"
			android:background="#008DCD"
			android:gravity="center_horizontal|center_vertical"
			android:text="Try to Reconnect"
			android:textSize="14sp"
			android:textColor="#FFFFFF"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
			style="@style/Widget.MaterialComponents.Button"
			android:drawableLeft="@drawable/ic_redo_white"
			app:elevation="4dp"/>
	</LinearLayout>
</LinearLayout>
